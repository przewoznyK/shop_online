<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<script src="https://kit.fontawesome.com/ace4508bf6.js" crossorigin="anonymous"></script>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}




</head>
<body>
<style>

.badge {
  position: relative;
  display: inline-block;
	color: black;
  font-size: 24px;
}

.badge-number {
  position: absolute;
  bottom: 0px;
  right: 3px;
  background-color: blue;
  color: white;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  text-align: center;
  font-size: 12px;
  line-height: 20px;
}

</style>
</span>

<nav class='navbar navbar-expand-sm bg-body-tertiary'>
	<div class='container-fluid'>
		<a class="navbar-brand mx-2" href="{{ path('app_index') }}"><i class="fas fa-store fa-2x"></i></a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse flex-grow-0" id="navbarNav">
			<ul class="navbar-nav">
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<li class="nav-item">
						<a class="nav-link ms-3" href="{{ path('app_my_sell') }}">My sell</a>
					</li>
					<li class="nav-item ms-3">
						<a class="nav-link" href="{{ path('app_my_orders') }}">My orders</a>
					</li>
					<li class="nav-item ms-3">
						<a class="nav-link" href="{{ path('app_carts') }}">
							<span class="badge"><i class="fas fa-shopping-cart"></i>
							<span class="badge-number show-cart-count">{{ app.session.get('cartsCount') }}</span>
						</span></a>
					</li>
					
					<li class="nav-item ms-3">
						<a class="nav-link d-flex" href="{{ path('app_my_wallet') }}">
							<span class="fs-4 text-center text-dark"><i class="fas fa-wallet"></i>
							<span class="fs-6" id="walletNav">${{ app.session.get('wallet') }}</span>
						</span></a>
					</li>
					<li class="nav-item me-5">
						<div class="dropdown">
							<a href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="{{ asset('users_data/' ~ app.session.get('userId') ~ '/avatar/avatar.jpg') }}" alt="avatar" id='avatar-nav' width='60px'>
							</a>
							<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
								<li><a class="dropdown-item" href="{{ path('app_user') }}">Profile</a></li>
								<li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
							</ul>
						</div>		
					</li>
				{% else %}
					<li class="nav-item mx-3 my-3">
						<a class="btn btn-primary" href="{{ path('app_login') }}">	Login </a>
					</li>

					<li class="nav-item mx-3 my-3">
						<a class="btn btn-success" href="{{ path('app_register') }}">	Register </a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>
</nav>

{% block body %}{% endblock %}
<div class="container">
	<footer class="py-3 my-4">
		<hr>
		<p class="text-center text-muted">© 2023 Company, Inc</p>
	</footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>

